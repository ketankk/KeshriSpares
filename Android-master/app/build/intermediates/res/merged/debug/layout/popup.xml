<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/popupheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/newStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-sarif"
            android:text="New"
            android:textColor="#aaa123"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/quantityUpdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toEndOf="@+id/newStock"
            android:layout_toStartOf="@+id/sold"
            android:hint="Quantity"
            android:inputType="number" />

        <TextView
            android:id="@+id/sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-sarif"
            android:text="Sold"
            android:textColor="#aaa123"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/popupDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:text="Cancel" />

</LinearLayout>