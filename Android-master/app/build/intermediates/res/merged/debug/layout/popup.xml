<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:translationZ="200dp"
    android:background="@drawable/customborder"
    >

    <TextView
        android:id="@+id/popupheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="ModelName"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/newStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-sarif"
            android:text="New"
            android:layout_margin="5dp"
            android:textColor="#A50DEACD"
            android:textSize="25sp"
            android:textStyle="bold"
            android:elevation="5dp"

            />

        <EditText
            android:id="@+id/quantityUpdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toEndOf="@+id/newStock"
            android:layout_toStartOf="@+id/sold"
            android:hint="Quantity"
            android:inputType="number" />

        <TextView
            android:id="@+id/sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-sarif"
            android:text="Sold"
            android:textColor="#A50DEACD"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:elevation="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/popupDismiss"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Cancel"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textColor="#faeae60b"

        />
    <TextView
        android:textColorLink="#FA06ECD9"
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/popupDismiss"
        android:layout_marginLeft="50dp"
        android:textColor="#fa085bec"
        android:textSize="20sp"
        android:hint="change date"
        android:text="dd-mm-yyyy"
        android:elevation="20sp"
        >
    </TextView>
</RelativeLayout>
</LinearLayout>